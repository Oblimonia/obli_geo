<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE: base_address_extended.view_city_tree  -->
    <record id="view_res_city_tree_inherit_obli" model="ir.ui.view">
        <field name="name">res.city.tree.inherit.obli</field>
        <field name="model">res.city</field>
        <field name="inherit_id" ref="base_address_extended.view_city_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="replace">
                <tree string="City" editable="top">
                    <field name="name"/>
                    <field name="zipcode"/>
                    <field name="municipality_id" context="{'default_country_id': country_id}"
                           options="{'no_open': True, 'no_create': True}"/>
                    <field name="regional_unit_id" optional="hide" context="{'default_country_id': country_id}"
                           options="{'no_open': True, 'no_create': True}"/>
                    <field name="state_id" optional="hide" context="{'default_country_id': country_id}"
                           options="{'no_open': True, 'no_create': True}"/>
                    <field name="country_id" options="{'no_open': True, 'no_create': True}"/>
                </tree>
            </xpath>
        </field>
    </record>

</odoo>
